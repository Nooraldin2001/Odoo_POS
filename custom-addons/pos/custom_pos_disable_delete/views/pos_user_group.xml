<odoo>
    <record id="view_users_form_inherit_pos_cashier" model="ir.ui.view">
        <field name="name">res.users.form.inherit.pos.cashier</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='access_rights']" position="inside">
                <group>
                    <field name="groups_id" widget="many2many_tags"
                           domain="[('category_id.name', '=', 'Sales')]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
