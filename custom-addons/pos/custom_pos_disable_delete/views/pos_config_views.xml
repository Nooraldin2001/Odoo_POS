<odoo>
    <record id="pos_config_view_form_inherit_disable_delete" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.disable.delete</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='restrict_price_control']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="restrict_delete_for_cashiers"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="restrict_delete_for_cashiers"/>
                        <div class="text-muted">
                            Disable delete button for cashiers
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>